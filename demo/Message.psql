
namespace Models;

/**
 * Represents a message sent by the user
 */
Message {

    id int;
    user_id int references users(id);
    message text;

    static findAllByUser($id) {
        SELECT * FROM $Message WHERE user_id = $id
    }
    
    static create($user_id, $message) {
        INSERT INTO $Message (user_id, message) 
            VALUES ($user_id, $message)
    }

}

/**
 * hello world
 */
@ClassQL\Filters\SingleValue
say_hello_to($name) {
    SELECT 'hello' || $name
}